<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:p="http://primefaces.org/ui">

    <ui:composition template="/template.xhtml">


        <ui:define name="title">
            <h:outputText value="#{bundle.ListTtipocartaTitle}"></h:outputText>
        </ui:define>

        <ui:define name="body">
            <h:form id="TtipocartaListForm">
                <p:panel header="#{bundle.ListTtipocartaTitle}">
                    <p:dataTable id="datalist" value="#{ttipocartaController.items}" var="item"
                                 selectionMode="single" selection="#{ttipocartaController.selected}"
                                 paginator="true"
                                 rowKey="#{item.idTipoCarta}"
                                 rows="10"
                                 rowsPerPageTemplate="10,20,30,40,50"
                                 >

                        <p:ajax event="rowSelect"   update="createButton viewButton editButton deleteButton"/>
                        <p:ajax event="rowUnselect" update="createButton viewButton editButton deleteButton"/>

                        <p:column>
                            <f:facet name="header">
                                <h:outputText value="#{bundle.ListTtipocartaTitle_idTipoCarta}"/>
                            </f:facet>
                            <h:outputText value="#{item.idTipoCarta}"/>
                        </p:column>
                        <p:column>
                            <f:facet name="header">
                                <h:outputText value="#{bundle.ListTtipocartaTitle_descCarta}"/>
                            </f:facet>
                            <h:outputText value="#{item.descCarta}"/>
                        </p:column>
                        <p:column>
                            <f:facet name="header">
                                <h:outputText value="#{bundle.ListTtipocartaTitle_tamanio}"/>
                            </f:facet>
                            <h:outputText value="#{item.tamanio}"/>
                        </p:column>
                        <p:column>
                            <f:facet name="header">
                                <h:outputText value="#{bundle.ListTtipocartaTitle_tipoTamanio}"/>
                            </f:facet>
                            <h:outputText value="#{item.tipoTamanio}"/>
                        </p:column>
                        <p:column>
                            <f:facet name="header">
                                <h:outputText value="#{bundle.ListTtipocartaTitle_control}"/>
                            </f:facet>
                            <h:outputText value="#{item.control}"/>
                        </p:column>
                        <f:facet name="footer">
                            <p:commandButton id="createButton" icon="ui-icon-plus"   value="#{bundle.Create}" actionListener="#{ttipocartaController.prepareCreate}" update=":TtipocartaCreateForm" oncomplete="PF('TtipocartaCreateDialog').show()"/>
                            <p:commandButton id="viewButton"   icon="ui-icon-search" value="#{bundle.View}" update=":TtipocartaViewForm" oncomplete="PF('TtipocartaViewDialog').show()" disabled="#{empty ttipocartaController.selected}"/>
                            <p:commandButton id="editButton"   icon="ui-icon-pencil" value="#{bundle.Edit}" update=":TtipocartaEditForm" oncomplete="PF('TtipocartaEditDialog').show()" disabled="#{empty ttipocartaController.selected}"/>
                            <p:commandButton id="deleteButton" icon="ui-icon-trash"  value="#{bundle.Delete}" actionListener="#{ttipocartaController.destroy}" update=":growl,datalist" disabled="#{empty ttipocartaController.selected}"/>
                        </f:facet>
                    </p:dataTable>
                </p:panel>
            </h:form>

            <ui:include src="Create.xhtml"/>
            <ui:include src="Edit.xhtml"/>
            <ui:include src="View.xhtml"/>
        </ui:define>
    </ui:composition>

</html>
